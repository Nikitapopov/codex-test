{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "indent": [1, 4],
        "linebreak-style": [1, "windows"],
        "quotes": [1, "single"],
        "semi": [1, "always"],
        "react/prop-types": "off"
    }
}
